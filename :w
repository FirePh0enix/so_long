#include "gui.h"
#include "so_long.h"
#include <stdlib.h>

t_gamemenu	*menu_new()
{
	t_gamemenu	*menu;

	menu = malloc(sizeof(t_gamemenu));
	return (menu);
}

static void _draw_button(t_game *game, int x, int y, int size)
{
	int	i;

	draw_sprite(game, game->btn_left,
		(t_vec2){x * SCALED_SIZE, y * SCALED_SIZE},
		(t_draw){SCALED_SIZE, false});
	i = -1;
	while (++i < size - 2)
		draw_sprite(game, game->btn_mid,
			(t_vec2){(x + 1 + i) * SCALED_SIZE, y * SCALED_SIZE},
			(t_draw){SCALED_SIZE, false});
	draw_sprite(game, game->btn_right,
		(t_vec2){(x + size - 1) * SCALED_SIZE, y * SCALED_SIZE},
		(t_draw){SCALED_SIZE, false});
}

void	draw_menu(t_game *game, t_gamemenu *menu)
{
}
